		"@types/yargs": "^17.0.9",
		"@types/nodemailer": "6.4.4",
		"@typescript-eslint/eslint-plugin": "^5.13.0",
		"@typescript-eslint/parser": "^5.13.0",
		"eslint": "^8.10.0",
		"nodemon": "^2.0.15",
		"npm-check-updates": "12.5.2",
		"ts-loader": "^9.2.7",
		"ts-node": "^10.6.0",
		"typescript": "4.6.2"
	},
	"dependencies": {
		"@polkadot/api": "7.10.1",
		"matrix-js-sdk": "^15.6.0",
