{
	"compilerOptions": {
		"target": "es6",
		"module": "CommonJS",
		"lib": [
			"es6"
		],
		"moduleResolution": "node",
		"allowJs": true,
		"rootDir": "./src",
		// Some compiling checks.
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		// dep resolution
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"resolveJsonModule": false,
		"declaration": false,
		"emitDeclarationOnly": false,
		"outDir": "build",
		"declarationMap": false,
		"skipLibCheck": true
	},
	"exclude": [
		"**/*.test.ts",
		"*.js",
		"build",
		"jest.config.js"
	],
}
